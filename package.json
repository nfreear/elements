{
  "name": "ndf-web-components",
  "version": "1.1.0",
  "description": "My Web Components | Â© 2021 Nick Freear.",
  "author": "Nick Freear",
  "license": "MIT",
  "homepage": "https://nfreear.github.io/web-components/demo/",
  "repository": "https://github.com/nfreear/web-components.git",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./custom": {
      "import": "./custom.js"
    }
  },
  "files": [
    "!**/.DS_Store",
    "custom.js",
    "index.js",
    "src/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "node ./src/build/template.js > ./template.html",
    "start": "npx servor . 8080 --reload",
    "start:old": "live-server --no-browser",
    "fix": "semistandard --fix",
    "test": "semistandard"
  },
  "semistandard": {
    "XX_globals": [
      "customElements",
      "HTMLElement"
    ]
  },
  "keywords": [
    "web components",
    "components",
    "custom elements",
    "pwa"
  ],
  "devDependencies": {
    "semistandard": "^16.0.1",
    "servor": "^4.0.2"
  }
}
